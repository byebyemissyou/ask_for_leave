<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_detial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/check_back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="250dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/corner_four"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/corner_two_blue"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="设置设备号"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="150dp">

            <EditText
                android:id="@+id/asd_device_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="请设置设备编号"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/asd_cancle_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/corner_four_blue"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="取消"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/asd_sure_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/corner_four_blue"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="确定"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/asdn_back_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/icon_return"
        android:onClick="onClick" />
</RelativeLayout>

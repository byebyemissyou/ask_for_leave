<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_leave_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kade.lyx.ask_for_leave.activity.LeaveCheckActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <TextView
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/toolbarTextSize"
            android:text="选择开始时间： "
            android:layout_width="130dp"
            android:layout_height="match_parent" />
        <EditText

            android:id="@+id/leave_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@drawable/corners_bg_small"
            android:clickable="true"
            android:cursorVisible="false"
            android:drawableLeft="@drawable/date_pic"
            android:editable="false"
            android:gravity="center_vertical"
            android:textColor="@color/grey_dark"
            android:textSize="12sp" />


        <TextView
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/toolbarTextSize"
            android:text="选择结束时间： "
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:id="@+id/textView" />

        <EditText
            android:id="@+id/leave_time2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@drawable/corners_bg_small"
            android:clickable="true"
            android:cursorVisible="false"
            android:drawableLeft="@drawable/date_pic"
            android:editable="false"
            android:gravity="center_vertical"
            android:textColor="@color/grey_dark"
            android:textSize="12sp" />

        <TextView
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/toolbarTextSize"
            android:text="选择类型： "
            android:layout_width="120dp"
            android:layout_height="match_parent"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/corners_bg_small"
            android:padding="2dp">


            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/leave_type"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                app:ms_text_color="@color/blue_text" />

        </LinearLayout>

        <Button

            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/corners_bg_small"
            android:onClick="queryLeaveCheckList"
            android:text="点击查询"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/toolbarTextSize"

            />



    </LinearLayout>

    <ListView
        android:id="@+id/check_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp"
        />



</LinearLayout>
